{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.RollingFile"],
    "MinimumLevel": "Information",
    "Enrich": ["FromLogContext"],
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": { "pathFormat": "logs/log-{Date}.txt" }
      }
    ]
  }
}